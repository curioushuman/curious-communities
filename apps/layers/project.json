{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/layers/**/*.ts"]
      }
    },
    "list": {
      "executor": "@otterdev/nx-cdk:run",
      "options": {
        "outputPath": "dist/apps/layers",
        "command": "list",
        "parameters": [
          "--all",
          "--profile=$AWS_PROFILE"
        ]
      },
      "outputs": ["{options.outputPath}"]
    },
    "build": {
      "executor": "@otterdev/nx-cdk:run",
      "options": {
        "outputPath": "dist/apps/layers",
        "command": "synth",
        "parameters": [
          "--all",
          "--profile=$AWS_PROFILE"
        ]
      },
      "outputs": ["{options.outputPath}"],
      "dependsOn": [{
        "target": "build",
        "projects": "dependencies"
      },{
        "target": "build-node-modules",
        "projects": "self"
      }]
    },
    "synth": {
      "executor": "@otterdev/nx-cdk:run",
      "options": {
        "outputPath": "dist/apps/layers",
        "command": "synth",
        "parameters": [
          "--all",
          "--profile=$AWS_PROFILE"
        ]
      },
      "outputs": ["{options.outputPath}"],
      "dependsOn": [{
        "target": "build",
        "projects": "dependencies"
      },{
        "target": "build-node-modules",
        "projects": "self"
      }]
    },
    "deploy": {
      "executor": "@otterdev/nx-cdk:run",
      "options": {
        "outputPath": "dist/apps/layers",
        "command": "deploy",
        "parameters": [
          "--all",
          " --require-approval=never",
          "--outputs-file ../../../dist/apps/layers/cdk-outputs.json",
          "--profile=$AWS_PROFILE"
        ]
      },
      "outputs": ["{options.outputPath}"],
      "dependsOn": [{
        "target": "build",
        "projects": "dependencies"
      },{
        "target": "build-node-modules",
        "projects": "self"
      }]
    },
    "destroy": {
      "executor": "@otterdev/nx-cdk:run",
      "options": {
        "outputPath": "dist/apps/layers",
        "command": "destroy",
        "parameters": [
          "--all",
          "--force",
          "--profile=$AWS_PROFILE"
        ]
      }
    },
    "diff": {
      "executor": "@otterdev/nx-cdk:run",
      "options": {
        "outputPath": "dist/apps/layers",
        "command": "diff",
        "parameters": [
          "--all",
          "--profile=$AWS_PROFILE"
        ]
      },
      "dependsOn": [{
        "target": "build",
        "projects": "dependencies"
      },{
        "target": "build-node-modules",
        "projects": "self"
      }]
    },
    "metadata": {
      "executor": "@otterdev/nx-cdk:run",
      "options": {
        "outputPath": "dist/apps/layers",
        "command": "metadata",
        "parameters": [
          "--all",
          "--profile=$AWS_PROFILE"
        ]
      }
    },
    "context": {
      "executor": "@otterdev/nx-cdk:run",
      "options": {
        "outputPath": "dist/apps/layers",
        "command": "context",
        "parameters": [
          "--all",
          "--profile=$AWS_PROFILE"
        ]
      }
    },
    "docs": {
      "executor": "@otterdev/nx-cdk:run",
      "options": {
        "outputPath": "dist/apps/layers",
        "command": "docs",
        "parameters": [
          "--all",
          "--profile=$AWS_PROFILE"
        ]
      }
    },
    "doctor": {
      "executor": "@otterdev/nx-cdk:run",
      "options": {
        "outputPath": "dist/apps/layers",
        "command": "doctor",
        "parameters": [
          "--all",
          "--profile=$AWS_PROFILE"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/layers"],
      "options": {
        "jestConfig": "apps/layers/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "add-live-layer-permissions": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "aws lambda add-layer-version-permission --layer-name NodeModulesLayer --version-number 1 --statement-id NodeModulesLayerLocalStack --principal 886468871268 --action lambda:GetLayerVersion | ./non-zero-success.sh",
          "aws lambda add-layer-version-permission --layer-name SharedLayer --version-number 7 --statement-id SharedLayerLocalStack --principal 886468871268 --action lambda:GetLayerVersion | ./non-zero-success.sh"
        ],
        "cwd": "tools/scripts",
        "parallel": true
      }
    },
    "remove-live-layer-permissions": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "aws lambda remove-layer-version-permission --layer-name NodeModulesLayer --version-number 1 --statement-id NodeModulesLayerLocalStack",
          "aws lambda remove-layer-version-permission --layer-name SharedLayer --version-number 7 --statement-id SharedLayerLocalStack"
        ],
        "cwd": "apps/layers",
        "parallel": true
      }
    },
    "deploy-local": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "../../node_modules/.bin/rimraf ../../dist/apps/layers",
          "../../node_modules/.bin/cdklocal deploy --require-approval=never --output ../../dist/apps/layers"
        ],
        "cwd": "apps/layers",
        "parallel": false
      },
      "dependsOn": [{
        "target": "build",
        "projects": "dependencies"
      },{
        "target": "build-node-modules",
        "projects": "self"
      }]
    },
    "destroy-local": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../node_modules/.bin/cdklocal destroy --force --output ../../dist/apps/layers",
        "cwd": "apps/layers",
        "parallel": false
      }
    },
    "build-node-modules": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rimraf dist/layers/node-modules",
          "mkdir -p dist/layers/node-modules/nodejs",
          "cp package.json dist/layers/node-modules/nodejs",
          "cd dist/layers/node-modules/nodejs && npm install --production"
        ],
        "parallel": false
      }
    }
  },
  "tags": ["scope:layers"]
}
