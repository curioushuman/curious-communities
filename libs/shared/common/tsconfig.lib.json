{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["es2021"],
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.fake.ts",
    "**/fake/**/*.ts",
    "**/*.builder.ts"
  ]
}
